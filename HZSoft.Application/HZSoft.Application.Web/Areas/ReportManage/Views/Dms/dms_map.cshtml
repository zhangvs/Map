        function doserch() {
            var queryJson = $("#filter-form").GetWebControls();
            $.ajax({
                type: "POST",
                url: "/ReportManage/Dms/GetMapData",
                data: { queryJson: JSON.stringify(queryJson), rnd: Math.random() },
                success: function (data) {
                    if (data) {
                        tArray0 = [];
                        tArray1 = [];
                        tArray2 = [];
                        tArray3 = [];
                        tArrayNoSee = [];
                        tArrayOffice = [];
