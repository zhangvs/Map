    ViewBag.Title = "个人中心";
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name='apple-touch-fullscreen' content='yes' />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="format-detection" content="address=no" />
    <meta name="viewport" content="initial-scale=1, width=device-width, maximum-scale=1, user-scalable=no" />
    <link href="/Content/Styles/stylelist.css" rel="stylesheet" type="text/css" />
    <script src="/Content/Scripts/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
    <title>个人中心</title>
    <style>
        .menu_grzx {
            top: 190px;
        }
    </style>
    <script>
        $(function () {

        })
    </script>
</head>
<body>
    <div style="background: #06C1AE; background-repeat: no-repeat; background-size: cover;height: 3rem;vertical-align: middle;">
        <header class="bg03" style="padding: initial; position: initial;">
            <h3 style="position: absolute;  text-align: left; line-height:0.85rem;color:white" onclick="window.history.back(-1);">
                <img src="/Content/images/btn_return.png" style="height: 30px; margin-bottom: 5px;" />
            </h3>
            @*<span style="margin-right: 5%; font-size: 0.32rem;" class="fr">
                    <a href="Edit" style="color: #fff;">
                        编辑资料
                    </a>
                </span>*@
        </header>
        <div style="padding-left: .15rem;">
            <table border="0" cellspacing="0" cellpadding="0" style="padding-top: 2rem; vertical-align: middle;">
                <tbody>
                    <tr>
                        <td rowspan="3" style="color: #fff;">
                            <div class="upic" style="background: url(@Model.HeadimgUrl) no-repeat center center; background-size: cover;">
                            </div>
                        </td>
                        <td style="width: 0.3rem; color: #fff;" rowspan="3"></td>
                        <td style="font-size: 0.35rem; color: #fff;">
                            @Model.NickName
                        </td>
                    </tr>
                    <tr>
                        <td id="intro" style="color: #fff;">
                            姓名：@Model.UserName
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="adress" style="padding: 1.3% 4%; background: #fff; line-height: 200%;">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td width="25%" align="center" style="font-size: 0.32rem; color: #9a9a9a;">
                    已合作
                </td>
                <td width="25%" align="center" style="font-size: 0.32rem; color: #9a9a9a;">
                    有意向
                </td>
                <td width="25%" align="center" style="font-size: 0.32rem; color: #9a9a9a;">
                    待跟进
                </td>
                <td width="25%" align="center" style="font-size: 0.32rem; color: #9a9a9a;">
                    未开发
                </td>
            </tr>
            <tr>
                <td align="center" style="font-size: 0.32rem;" id="state3">
                    <a href="MyCompany?state=3">@ViewBag.state3</a>
                </td>
                <td align="center" style="font-size: 0.32rem;" id="state2">
                    <a href="MyCompany?state=2">@ViewBag.state2</a>
                </td>
                <td align="center" style="font-size: 0.32rem;" id="state4">
                    <a href="MyCompany?state=4">@ViewBag.state4</a>
                </td>
                <td align="center" style="font-size: 0.32rem;" id="state0">
                    <a href="MyCompany?state=0">@ViewBag.state0</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="wddd" style="margin-right: 0; padding-right: 0;">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr onclick="javascript:location.href='MyCompany'">
                <td>
                    <img src="/Content/Images/推广@2x.png" style="height: 25px; margin-right: 5px; padding-bottom: 5px;" /><a href="MyCompany">我的客户</a>
                </td>
                <td width="36%" align="right">
                    <a href="MyCompany">
                        <img src="~/Content/images/btn_arrow1.png" width="24%" />
                    </a>
                </td>
            </tr>
            <tr onclick="javascript:location.href='MyBrowse'">
                <td>
                    <img src="/Content/Images/订单@2x.png" style="height: 25px; margin-right: 3px; margin-bottom: 5px;" />
                    <a href="MyBrowse">浏览记录</a>
                </td>
                <td width="34%" align="right">
                    <a href="MyBrowse">
                        <img src="~/Content/images/btn_arrow1.png" width="24%" />
                    </a>
                </td>
            </tr>
        </table>
    </div>
    <div style="height: 20px;">
    </div>
    <nav>
        <a href="/WeChatManage/Nearby/NearbyMap" class="nav_sy2">地图</a>
        <a href="/WeChatManage/Nearby/NearbyList" class="nav_dd2">列表</a>
        <a href="/WeChatManage/UserCenter/Index" class="nav_grzx2 grzx_curr2">个人中心</a>
    </nav>
</body>
</html>